{
  "name": "nac-copilot",
  "displayName": "NaC_CoPilot",
  "description": "Network as Code (NaC) CoPilot",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.100.2"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onChatParticipant:chat-tutorial.code-assistant"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "chat-tutorial.code-assistant",
        "fullName": "Code Assistant",
        "name": "assistant",
        "description": "What can I help you with?",
        "isSticky": true,
        "commands": [
          {
            "name": "ask",
            "description": "Ask questions about specific workflows."
          },
          {
            "name": "validate",
            "description": "Provide code to validate."
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "validate-and-lint",
        "title": "Validate & Lint",
        "icon": "$(check)"
      },
      {
        "command": "run-playbook",
        "title": "Run Playbook",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "validate-and-lint",
          "group": "navigation@1"
        },
        {
          "command": "run-playbook",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "NaC Copilot Configuration",
      "properties": {
        "nac-copilot.ansibleLintPath": {
          "type": "string",
          "default": "ansible-lint",
          "description": "Path to the ansible-lint executable. Use 'ansible-lint' if it is in your PATH, or provide the full path."
        },
        "nac-copilot.varsFilePath": {
          "type": "string",
          "default": "",
          "description": "Path to the vars file. Please provide the full path."
        },
        "nac-copilot.yamalePath": {
          "type": "string",
          "default": "yamale",
          "description": "Path to the yamale executable. Use 'yamale' if it is in your PATH, or provide the full path."
        },
        "nac-copilot.yamlLintPath": {
          "type": "string",
          "default": "yamllint",
          "description": "Path to the yamllint executable. Use 'yamllint' if it is in your PATH, or provide the full path."
        },
        "nac-copilot.gitPath": {
          "type": "string",
          "default": "git",
          "description": "Path to the git executable. Use 'git' if it is in your PATH, or provide the full path."
        },
        "nac-copilot.ansiblePlaybookPath": {
          "type": "string",
          "default": "ansible-playbook",
          "description": "Path to the ansible-playbook executable. Use 'ansible-playbook' if it is in your PATH, or provide the full path."
        },
        "nac-copilot.venv": {
          "type": "string",
          "default": "",
          "description": "Path to the virtual environment."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.1",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@huggingface/inference": "^4.0.6",
    "@langchain/community": "^0.3.47",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.9.0",
    "cohere-ai": "^7.17.1",
    "langchain": "^0.3.29",
    "onnxruntime-node": "^1.22.0-rev"
  }
}
